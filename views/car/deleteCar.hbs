<div class="col-lg-4 col-lg-offset-4">

    <form method="post" action="/car/destroy/{{car.id}}">

        <div class="form-group">

            <label for="name">Car name:</label>
            <input type="text" class="form-control" id="name" name="name" value="{{car.name}}" readonly />

        </div>

        <div class="form-group">

            <label for="color">Color:</label>
            <input type="text" class="form-control" id="color" name="color"  value="{{car.color}}" readonly />

        </div>

        <button type="submit" class="btn btn-primary">Delete</button>

    </form>

</div>
